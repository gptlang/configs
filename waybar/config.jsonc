{
	"layer": "top",
	"position": "top",
	"height": 30,
	"modules-left": [
		"hyprland/workspaces",
		"backlight",
		"bluetooth",
		"custom/notifications"
	],
	"modules-center": [
		"clock"
	],
	"modules-right": [
		"tray",
		"network",
		"pulseaudio",
		"pulseaudio#microphone",
		"battery"
	],
	"hyprland/window": {
		"format": "{}"
	},
	"hyprland/workspaces": {
		"sort-by-name": true,
		"format": "{id}",
		"show-special": true,
		"persistent-workspaces": {
			"*": 0
		}
	},
	"tray": {
		"icon-size": 12,
		"spacing": 2
	},
	"clock": {
		"interval": 60,
		"format": "{:%a, %b %d (%I:%M %p)}",
		"tooltip-format": "<tt><small>{calendar}</small></tt>",
		"calendar": {
			"mode": "year",
			"mode-mon-col": 4,
			"format": {
				"months": "<span color='#e6e1cf'><b>{}</b></span>",
				"days": "<span color='#cad3f5'><b>{}</b></span>",
				"weekdays": "<span color='#ff3333'><b>{}</b></span>",
				"today": "<span color='#f5a97f'><b><u>{}</u></b></span>"
			}
		},
		"on-click": "gnome-calendar"
	},
	"backlight": {
		"device": "intel_backlight",
		"format": "{icon} {percent}%",
		"format-icons": [
			"üåï",
			"üåÑ",
			"üîÜ"
		]
	},
	"battery": {
		"states": {
			"good": 100,
			"warning": 30,
			"critical": 20
		},
		"format": "{icon} {capacity}%",
		"format-charging": "Ôá¶ {capacity}%",
		"format-plugged": "Ôá¶ {capacity}%",
		"format-icons": [
			"Ôñç",
			"Ôïπ",
			"Ôï∫",
			"Ôïª",
			"Ôïº",
			"ÔïΩ",
			"Ôïæ",
			"Ôïø",
			"ÔñÄ",
			"ÔñÅ",
			"Ôï∏"
		],
		"on-click": "zenity --question --text=\"Are you sure you want to power off?\" && { poweroff; }"
	},
	"pulseaudio": {
		"format": "{icon} {volume}%",
		"tooltip": true,
		"format-muted": "ÔÄ¶ Muted",
		"on-click": "pamixer -t",
		"on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +10%",
		"on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -10%",
		"scroll-step": 10,
		"format-icons": {
			"headphone": "ÔÄ•",
			"hands-free": "ÔÄ•",
			"headset": "ÔÄ•",
			"phone": "ÔÇï",
			"portable": "ÔÇï",
			"car": "ÔÜπ",
			"default": [
				"ÔÄ¶",
				"ÔÄß",
				"ÔÄ®"
			]
		}
	},
	"pulseaudio#microphone": {
		"format": "{format_source}",
		"format-source": "Ô°´ {volume}%",
		"format-source-muted": "Ô°¨ Muted",
		"on-click": "pamixer --default-source -t",
		"on-scroll-up": "pamixer --default-source -i 5",
		"on-scroll-down": "pamixer --default-source -d 5",
		"scroll-step": 5
	},
	"network": {
		"format-disconnected": "Disconnected",
		"format-wifi": "Ôá´ {essid}",
		"max-length": 10,
		"tooltip-format": "ÔÑπ {signalStrength}",
		"on-click": "wifimenu"
	},
	"bluetooth": {
		"format": "Ôäî {status}",
		"format-disabled": "Ôäî {status}",
		"format-connected": "Ôäî {num_connections}",
		"tooltip-format": "{device_alias}",
		"format-connected-battery": "Ôñ∞ {device_battery_percentage}%",
		"tooltip-format-enumerate-connected": "{device_alias}",
		"on-click": "btblock",
		"max-length": 10,
	},
	"memory": {
		"interval": 300,
		"format": " ÔÉâ {used}G ",
		"tooltip-format": "{used} / {total} G"
	},
	"disk": {
		"interval": 600,
		"format": " ÔÇ† {percentage_used}%",
		"tooltip-format": "{used} used out of {total} on {path} "
	},
	  "custom/notifications": {
    "tooltip": false,
    "format": "{icon} {}",
    "format-icons": {
      "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "none": "ÔÇ¢",
      "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-none": "Ôá∑",
      "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-inhibited-none": "Ôá∑"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.2 && swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
}
